<%- include('header')%>
  
    
 
<div class="container" style="margin-top: 50px;">
     <div class="row">
   
       <div class="col-md-6 offset-md-3">
          <%
                   if(success!=''){%>
                     <p style="color:green;"><%= success%></p>
                   <%}
                 %>
            <div class="card">
              <div class="card-header  text-white text-center"style="background-color:#99CCFF;">
                
                <P style="text-transform: uppercase; color: black;">add new password</P>
              </div>
              <div class="card-body">
                <form method="POST" action="/add_new_password">
                 <div class="form-group ">
                    <label for="user">password details</label>
                    <div class="col-md-8">
                        <select name="pass_cat"  class="form-control" id="exampleInputuser1" aria-describedby="userHelp" >
                            <option>choose password catagory</option>
                            <% if (records.length>0){
                              records.forEach(function(row){
                              %>
                            <option><%= row.passwordCatagory%></option> //it will show catagoriea taht we inserted in dbs 
                           
                             <%}) } %>
                        </select>
                    </div>
                  </div>
                  
                  

                  <div class="form-group ">
                    <label for="userpassword">password details</label>
                    <textarea  type="text" id="editor" class="form-control" rows="5" name="pass_details"   id="exampleInputuser1" aria-describedby="userHelp"placeholder="add your password details" value="add password">
                   
                </textarea>
                </div>
                
                  <div class="form-group ">
                    <label for="project">project name</label>
                    <input type="text"   class="form-control" name="pass_project"   id="exampleInputuser1" aria-describedby="userHelp"placeholder="add your project name" >
                  </div>
                  
                <div class="form-group ">
                  <button type="submit" class="btn btn-primary offset-md-3 col-md-6">Add New password</button>
                </div>
              
                  
                  
                </form>
                     <a href="/password_catagory" > view all catagories</a>

              </div>
            </div>
       </div>
     </div>
 </div>
            <script> // it just replace our text area with editor
            CKEDITOR.replace('editor');
            </script>
</body>
</html>